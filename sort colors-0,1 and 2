        /*
        int count0 = 0, count1 = 0, count2 = 0;
        int n = nums.size();
        
        // Count the number of 0s, 1s, and 2s
        for (int i = 0; i < n; i++) {
            if (nums[i] == 0) count0++;
            else if (nums[i] == 1) count1++;
            else count2++;
        }
        
        // Overwrite the array with 0s, 1s, and 2s
